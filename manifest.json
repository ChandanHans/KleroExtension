{
  "manifest_version": 3,
  "name": "Klero Extension",
  "version": "4.0",
  "description": "This extension helps you to upload and manage your files in Google Drive for Klero.",
  "permissions": ["downloads", "activeTab", "storage"],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://kleroapi.onrender.com/"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "options_ui": {
    "page": "views/popup.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "views/popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://ciclade.caissedesdepots.fr/*"],
      "js": ["js/auth.js", "js/drive.js", "js/ui.js", "js/main.js"]
    }
  ]
}
